rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Tasks collection
    match /tasks/{taskId} {
      allow read, write: if true;
    }

    // Comments collection
    match /comments/{commentId} {
      allow read, write: if true;
    }

    // Users collection
    match /users/{userId} {
      allow read, write: if true;
    }
  }
}
